<? php

print "valor da mercadoria:";
    $valor_mercadoria = fgets (STDIN); 
print "porcentual do desconto:";
    $porcentual_descont = fgets (STDIN);

    $desconto = $valor_mercadoria * ($porcentual_descont/100);
    $valor_pagar = $valor_mercadoria- $desconto;

  print "Valor descontado: $desconto \n";
    print "Valor total de um pagamento: $valor_pagar";
