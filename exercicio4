<? php

print "Valor da mercadoria:";
  $ Valor_mercadoria = fgets (STDIN); 
print "Porcentual de desconto:";
$ Porcentual_desconto = fgets (STDIN);

    $ Desconto = $ Valor_mercadoria * ($ Porcentual_desconto / 100);
    $ Valor_a_pagar = $ Valor_mercadoria- $ Desconto;

print "Valor descontado: $ Desconto \ n";
print "Valor total de um pagamento: $ Valor_a_pagar";
