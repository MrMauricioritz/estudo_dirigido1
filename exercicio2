<? php

print "digite o tempo em dias:";
    $dias = fgets (STDIN);
print "digite o tempo em horas:";
    $horas = fgets (STDIN);
print "digite o tempo em minutos:";
    $minutos = fgets (STDIN);
print "digite o tempo em segundos:";
    $segundos = fgets (STDIN);

    $dias_segundos = $dias * 86400;
    $horas_segundos = $horas * 360;
    $minutos_segundos = $minutos * 60;
    $segundos_totais = $dias_segundos + $horas_segundos + $minutos_segundos + $segundos;

print "segundos totais: $segundos_totais";
